{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "globals": {
        "THREE": true
    },
    "rules": {
        /* Stylistic Issues */
        "block-spacing": ["error", "always"], // fixable
        "brace-style": ["error", "stroustrup", { "allowSingleLine": true }], // fixable
        "comma-dangle": ["error", "never"], // fixable
        "comma-spacing": ["error", { "before": false, "after": true }], // fixable
        "comma-style": ["error", "last"], // fixable
        "eol-last": ["error", "always"], // fixable
        "func-call-spacing": ["error", "never"], // fixable
        "func-name-matching": "warn",
        "indent": ["error", 4], // fixable
        "keyword-spacing": ["error", { "before": true }], // fixable
        "linebreak-style": ["error", "unix"], // fixable
        "new-cap": "error",
        "new-parens": "error", // fixable
        "no-mixed-spaces-and-tabs": "error",
        "no-multiple-empty-lines": ["error", { "max": 1, "maxBOF": 1 }], // fixable
        "no-nested-ternary": "warn",
        "no-trailing-spaces": "error", // fixable
        "no-unneeded-ternary": "error", // fixable
        "no-whitespace-before-property": "error", // fixable
        "nonblock-statement-body-position": ["error", "beside"], // fixable
        "object-curly-spacing": ["error", "never" ], // fixable
        "operator-assignment": ["error", "always" ], // fixable
        "quotes": ["error", "double" ], // fixable
        "semi": "error", // fixable
        "semi-spacing": ["error", {"before": false, "after": true}], // fixable
        "space-before-blocks": ["error", "always" ], // fixable
        "space-before-function-paren": ["error", { // fixable
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "never"
        }],
        "space-in-parens": ["error", "never"], // fixable
        "space-infix-ops": ["error", {"int32Hint": false}], // fixable
        "space-unary-ops": "warn",

        // Best Practices
        "complexity": ["warn", 50],
        "no-div-regex": "error",
        "no-lone-blocks": "error",
        "no-multi-spaces": ["error", {"exceptions": {"Property": false}}],
        "no-multi-str": "error",
        "no-native-reassign": "error", //"no-global-assign": "error",
        "no-negated-in-lhs": "error",
        "no-new": "error",
        "no-new-func": "off",
        "no-new-require": "error",
        "no-new-wrappers": "error",
        "no-script-url": "error",
        "no-sequences": "error",
        "no-unmodified-loop-condition": "error",
        "no-unused-vars": "warn",

        // Possible Errors
        "no-console": ["error", { "allow": ["log", "warn", "error", "info", "table"] }],
        "no-cond-assign": ["error", "except-parens"],
        "no-debugger": "error", // fixable
        "no-inner-declarations": ["error", "functions"],
        "no-irregular-whitespace": "error",

        // ECMAScript 6
        "arrow-body-style": ["error", "as-needed"], // fixable
        "arrow-parens": ["error", "as-needed"], // fixable
        "arrow-spacing": "error",
        "no-confusing-arrow": "error",
        "no-duplicate-imports": "error",

        // Node.js and CommonJS
        "global-require": "error",

        "array-bracket-newline": "off",
        "array-element-newline": "off",
        "camelcase": "off",
        "computed-property-spacing": "off",
        "consistent-this": "off",
        "func-names": "off",
        "func-style": "off",
        "function-paren-newline": "off",
        "id-blacklist": ["off", "error", "callback"],
        "id-length": "off",
        "id-match": "off",
        "implicit-arrow-linebreak": "off", // fixable !!!
        "no-inline-comments": "off",
        "jsx-quotes": "off",
        "key-spacing": ["off", { "align": "value" }], // fixable
        "line-comment-position": "off",
        "lines-around-comment": "off",
        "lines-between-class-members": "off", // !!!
        "max-depth": "off",
        "max-len": "off",
        "max-lines": "off",
        "max-nested-callbacks": "off",
        "max-params": "off",
        "max-statements": "off",
        "max-statements-per-line": "off",
        "multiline-comment-style": "off",
        "multiline-ternary": "off",
        "newline-per-chained-call": "off",
        "no-array-constructor": "off",
        "no-bitwise": "off",
        "no-continue": "off",
        "no-dupe-keys": "off",
        "no-lonely-if": "off",
        "no-loop-func": "off",
        "no-mixed-operators": "off",
        "no-multi-assign": "off",
        "no-negated-condition": "off",
        "no-new-object": "off",
        "no-plusplus": "off",
        "no-restricted-syntax": "off",
        "no-tabs": "off",
        "no-ternary": "off",
        "no-underscore-dangle": "off",
        "object-curly-newline": "off",
        "object-property-newline": "off",
        "one-var": "off",
        "one-var-declaration-per-line": "off",
        "operator-linebreak": "off",
        "padded-blocks": "off",
        "padding-line-between-statements": "off", // !!!
        "quote-props": ["off", "as-needed" ], // fixable
        "radix": ["off", "always"],
        "require-jsdoc": "off",
        "semi-style": "off", // !!!
        "sort-keys": "off",
        "sort-vars": "off",
        "spaced-comment": "off",
        "switch-colon-spacing": "off", // !!!
        "template-tag-spacing": "off",
        "unicode-bom": "off",
        "wrap-regex": "off",

        "accessor-pairs": "off",
        "array-callback-return": "off",
        "block-scoped-var": "off",
        "callback-return": "off",
        "capitalized-comments": "off",
        "class-methods-use-this": "off",
        "consistent-return": "off",
        "curly": "off",
        "default-case": "off",
        "dot-location": "off",
        "dot-notation": "off",
        "eqeqeq": "off",
        "for-direction": "off", // !!!
        "generator-star-spacing": "off",
        "getter-return": "off", // !!!
        "guard-for-in": "off",
        "handle-callback-err": "off",
        "indent-legacy": "off",
        "init-declarations": "off",
        "lines-around-directive": "off",
        "newline-after-var": "off",
        "newline-before-return": "off",
        "no-alert": "off",
        "no-await-in-loop": "off",
        "no-buffer-constructor": "off", // !!!
        "no-caller": "off",
        "no-catch-shadow": "off",
        "no-else-return": "off",
        "no-empty-function": "off",
        "no-eq-null": "off",
        "no-eval": "off",
        "no-extend-native": "off",
        "no-extra-bind": "off",
        "no-extra-label": "off",
        "no-extra-parens": "off",
        "no-floating-decimal": "off",
        "no-implicit-globals": "off",
        "no-implied-eval": "off",
        "no-invalid-this": "off",
        "no-iterator": "off",
        "no-label-var": "off",
        "no-labels": "off",
        "no-magic-numbers": "off",
        "no-mixed-requires": "off",
        "no-octal-escape": "off",
        "no-param-reassign": "off",
        "no-path-concat": "off",
        "no-process-env": "off",
        "no-process-exit": "off",
        "no-proto": "off",
        "no-prototype-builtins": "off",
        "no-restricted-globals": "off",
        "no-restricted-imports": "off",
        "no-restricted-modules": "off",
        "no-restricted-properties": "off",
        "no-return-assign": "off",
        "no-return-await": "off",
        "no-self-compare": "off",
        "no-shadow": "off",
        "no-shadow-restricted-names": "off",
        "no-space-before-semi": "off",
        "no-spaced-func": "off", // func-call-spacing
        "no-sync": "off",
        "no-template-curly-in-string": "off",
        "no-throw-literal": "off",
        "no-undef": "off",
        "no-undef-init": "off",
        "no-undefined": "off",
        "no-use-before-define": "off",
        "no-useless-call": "off",
        "no-useless-computed-key": "off",
        "no-useless-concat": "off",
        "no-useless-constructor": "off",
        "no-useless-escape": "off",
        "no-useless-rename": "off",
        "no-useless-return": "off",
        "no-var": "off",
        "no-void": "off",
        "no-warning-comments": "off",
        "no-with": "off",
        "object-shorthand": "off",
        "prefer-arrow-callback": "off",
        "prefer-const": "off",
        "prefer-destructuring": "off",
        "prefer-numeric-literals": "off",
        "prefer-promise-reject-errors": "off",
        "prefer-reflect": "off",
        "prefer-rest-params": "off",
        "prefer-spread": "off",
        "prefer-template": "off",
        "require-await": "off",
        "rest-spread-spacing": "off",
        "sort-imports": "off",
        "strict": "off",
        "symbol-description": "off",
        "template-curly-spacing": "off",
        "valid-jsdoc": "off",
        "vars-on-top": "off",
        "wrap-iife": "off",
        "yield-star-spacing": "off",
        "yoda": "off"
    }
}
